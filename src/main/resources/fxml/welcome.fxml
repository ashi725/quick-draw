<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.WelcomeController">
   <children>
      <VBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER" maxHeight="130.0" maxWidth="728.0" minHeight="130.0" minWidth="728.0" prefHeight="130.0" prefWidth="728.0" styleClass="coloured-box">
               <children>
                  <Label styleClass="menu-title" text="Speedy Sketchers!" />
                  <Label alignment="CENTER" prefHeight="42.0" prefWidth="390.0" styleClass="header" text="Excel the artist in you!" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
            <ImageView fitHeight="200.0" fitWidth="200.0">
               <image>
                  <Image url="@../images/playIcon.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </ImageView>
            <HBox alignment="CENTER" styleClass="coloured-box">
               <children>
                  <VBox alignment="CENTER" prefHeight="185.0" prefWidth="144.0">
                     <children>
                        <Button fx:id="btnSelectPlayerWelcome" mnemonicParsing="false" onAction="#onSelectPlayer">
                           <styleClass>
                              <String fx:value="rounded-corners" />
                              <String fx:value="create-account-button" />
                           </styleClass>
                           <graphic>
                              <ImageView fitHeight="90.0" fitWidth="90.0">
                                 <image>
                                    <Image url="@../images/select-user.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Label styleClass="menu-screenText" text="Select" />
                        <Label styleClass="menu-screenText" text="Player" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="185.0" prefWidth="144.0">
                     <children>
                        <Button fx:id="btnAddNewPlayerWelcome" mnemonicParsing="false" onAction="#onAddNewPlayer">
                           <styleClass>
                              <String fx:value="rounded-corners" />
                              <String fx:value="create-account-button" />
                           </styleClass>
                           <graphic>
                              <ImageView fitHeight="90.0" fitWidth="90.0">
                                 <image>
                                    <Image url="@../images/add-user.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Label styleClass="menu-screenText" text="Add New" />
                        <Label styleClass="menu-screenText" text="Player" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="400.0" layoutY="20.0" prefHeight="185.0" prefWidth="144.0">
                     <children>
                        <Button fx:id="btnHowToPlayWelcome" mnemonicParsing="false" onAction="#onHowToPlay">
                           <styleClass>
                              <String fx:value="rounded-corners" />
                              <String fx:value="create-account-button" />
                           </styleClass>
                           <graphic>
                              <ImageView fitHeight="90.0" fitWidth="90.0">
                                 <image>
                                    <Image url="@../images/instructions.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Label styleClass="menu-screenText" text="How To" />
                        <Label styleClass="menu-screenText" text="Play" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
