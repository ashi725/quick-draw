<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox alignment="CENTER" maxHeight="130.0" maxWidth="728.0" minHeight="130.0" minWidth="728.0" prefHeight="130.0" prefWidth="728.0" styleClass="coloured-box">
               <children>
                  <Label alignment="CENTER" styleClass="menu-title" text="Speedy Sketchers!">
                     <font>
                        <Font size="41.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefHeight="42.0" prefWidth="390.0" styleClass="header" text="Excel the artist in you!">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox maxHeight="30.0" maxWidth="780.0" minHeight="30.0" minWidth="780.0" prefHeight="30.0" prefWidth="780.0" />
            <VBox alignment="CENTER" maxHeight="260.0" maxWidth="520.0" minHeight="260.0" minWidth="520.0" prefHeight="260.0" prefWidth="520.0" styleClass="coloured-box">
               <children>
                  <Label alignment="CENTER" prefHeight="39.0" prefWidth="526.0" styleClass="menu-screenText" text="Login below or create an account">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" maxHeight="200.0" maxWidth="500.0" minHeight="200.0" minWidth="500.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER_LEFT" maxHeight="180.0" maxWidth="360.0" minHeight="180.0" minWidth="360.0" prefHeight="180.0" prefWidth="360.0" styleClass="form-vbox">
                           <children>
                              <TextField fx:id="usernameTextField" prefHeight="26.0" prefWidth="277.0" promptText="Username" styleClass="user-fields">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </TextField>
                              <Label fx:id="errorMessageLabel" alignment="CENTER" prefHeight="38.0" prefWidth="395.0" styleClass="menu-screenText" textFill="#d12937">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="20.0" prefWidth="780.0" />
            <HBox alignment="CENTER_RIGHT" maxHeight="100.0" maxWidth="780.0" minHeight="100.0" minWidth="780.0" prefHeight="100.0" prefWidth="780.0">
               <children>
                  <Button fx:id="loginButton" alignment="CENTER" maxHeight="65.0" maxWidth="160.0" minHeight="65.0" minWidth="160.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="65.0" prefWidth="160.0" styleClass="rounded-corners" text="Login" />
                  <VBox prefHeight="100.0" prefWidth="53.0" />
                  <VBox alignment="CENTER" maxHeight="90.0" maxWidth="230.0" minHeight="90.0" minWidth="230.0" prefHeight="90.0" prefWidth="230.0">
                     <children>
                        <Label prefWidth="114.0" styleClass="menu-screenText" text="New Here?" textFill="WHITE" />
                        <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#onCreateAccount" prefHeight="54.0" prefWidth="207.0" text="Create an account">
                           <styleClass>
                              <String fx:value="create-account-button" />
                              <String fx:value="rounded-corners" />
                           </styleClass></Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
