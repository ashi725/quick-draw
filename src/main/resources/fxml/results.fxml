<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.ResultsController">
   <children>
      <VBox alignment="CENTER" layoutX="40.0" layoutY="9.0" prefHeight="583.0" prefWidth="721.0">
         <children>
            <Label fx:id="resultLabel" alignment="CENTER" prefHeight="131.0" prefWidth="701.0" text="[Result message]" textAlignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Pane prefHeight="420.0" prefWidth="701.0">
               <children>
                  <ImageView fitHeight="390.0" fitWidth="560.0" layoutX="71.0" layoutY="-9.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/frame.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="sketchImageView" fitHeight="265.0" fitWidth="436.0" layoutX="133.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </Pane>
            <HBox alignment="CENTER" prefHeight="136.0" prefWidth="701.0" styleClass="results-button-box">
               <children>
                  <Button fx:id="btnBackToMain" mnemonicParsing="false" onAction="#onMainMenu" text="Main Menu" />
                  <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#onPlayAgain" prefHeight="65.0" prefWidth="195.0" text="Play Again?" />
                  <Button fx:id="saveSketchButton" mnemonicParsing="false" onAction="#onSaveSketch" prefHeight="65.0" prefWidth="192.0" text="Save Sketch" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
